extends ./layout

block content
    .container
        .row
            .six.columns
            .twelve.columns.mt-4.login
                h4=__("AMDB Login")
                form(method="POST" action="/amdb/login")
                    .row
                        .twelve.columns
                            label= "User"
                            input.u-full-width(type="text" required placeholder="Username" name="username")
                        .twelve.columns
                            label= "Password"
                            input.u-full-width(type="password" required placeholder="Password" name="password")
                        .actions.center
                            input.button-primary(type="submit" value=__("Accept"))